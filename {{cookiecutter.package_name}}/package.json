{
  "name": "{{ cookiecutter.package_name }}",
  "version": "{{ cookiecutter.version }}",
  "description": "{{ cookiecutter.description }}",
  "main": "index.js",
  "scripts": {
    "test": "node test_runner.js",
    "test:watch": "node test_runner.js --watch",
    "lint": "npx eslint src/ webpack/ test_runner.js",
    "lint:fix": "npx eslint --fix src/ webpack/ test_runner.js"
  },
  "author": "{{ cookiecutter.author }}",
  "license": "{{ cookiecutter.license }}",
  "repository": {
    "type": "git",
    "url": "https://github.com/{{ cookiecutter.package_name }}"
  },
  "{{ cookiecutter.package_name.lower().replace('-', '_') }}": {
    "port": {{ cookiecutter.test_server_port }}
  }
}
